generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  //just don't upgrdate to prisma 7 lmao
  url      = env("DATABASE_URL")
}

model GameSession {
  id         String    @id @unique @default(uuid())
  mapID      Int?
  createAt   DateTime  @default(now())
  finishAt   DateTime?
  totalTime  Int?
  guessedObj String[]
  completed  Boolean   @default(false)
}

model HighScore {
  id         String @id @unique @default(uuid())
  map_ID     Int
  session_ID String @unique
  username   String @default("Anonymous")
  time       Int
}

model Maps {
  id        Int    @id @unique @default(autoincrement())
  name      String
  obj1x     Int
  obj1y     Int
  obj2x     Int
  obj2y     Int
  obj3x     Int
  obj3y     Int
  originalx Int
  originaly Int
}
