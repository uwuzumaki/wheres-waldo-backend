generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GameSession {
  id             String    @id @unique @default(uuid())
  mapID          String?
  createAt       DateTime  @default(now())
  finishAt       DateTime?
  guessedObj     String[]
  guessedObjTime Int[]
  completed      Boolean   @default(false)
}

model HighScore {
  id         String   @id @unique @default(uuid())
  map_ID     String
  session_ID String
  username   String
  total_time Int
  createAt   DateTime @default(now())
}

model Maps {
  id        Int    @id @unique @default(autoincrement())
  name      String
  obj1x     Int
  obj1y     Int
  obj2x     Int
  obj2y     Int
  obj3x     Int
  obj3y     Int
  originalx Int
  originaly Int
}
